<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDemo.FlyoutDemoPage"
            FlyoutLayoutBehavior="Popover"
             Title="FlyoutDemoPage">
    <FlyoutPage.Flyout>
        <ContentPage
            Title="Flyout submenu" BackgroundColor="Aqua">
          
                <Label Text="SubMenu"
                       FontSize="Large"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"/>
           

        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <ContentPage BackgroundColor="GreenYellow">
          
                <Label Text="Detalhes"
                        FontSize="Large"
 HorizontalTextAlignment="Center"
 VerticalTextAlignment="Center"/>
            

        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>